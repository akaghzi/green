<!DOCTYPE html>
<html>
<head>
	<title>Green</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<%= yield %>
	<div>
		<hr>
		<% if user_signed_in? %>
		<%= link_to 'Properties', properties_path %>
		<%= link_to 'Signout', destroy_user_session_path, method: :delete, data: {confirm: "Are you sure?"} %>
		<% else %>
		<%= link_to 'Signin', new_user_session_path %>
		<% end %>
	</div>
</body>
</html>
